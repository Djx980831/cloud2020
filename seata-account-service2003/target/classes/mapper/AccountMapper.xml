<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.springcloud.alibaba.dao.AccountDao">

    <resultMap id="BaseResultMap" type="com.atguigu.springcloud.alibaba.doamin.Account">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="user_id" property="userId" jdbcType="BIGINT"/>
        <id column="total" property="total" jdbcType="DECIMAL"/>
        <id column="used" property="used" jdbcType="DECIMAL"/>
        <id column="residur" property="residur" jdbcType="DECIMAL"/>
    </resultMap>

    <update id="decrease">
        update t_account set total = total - #{money}, used = used + #{money}
        where
        user_id = #{userId}
    </update>
</mapper>
